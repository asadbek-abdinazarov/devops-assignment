<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <property name="APP_NAME" value="devops-assignment"/>

    <!-- Console pattern (dev/local) -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n"/>

    <!-- ===================== -->
    <!-- JSON Console Appender -->
    <!-- ===================== -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>

                <!-- 1) timestamp -->
                <timestamp>
                    <fieldName>date</fieldName>
                    <pattern>yyyy-MM-dd'T'HH:mm:ss.SSSZ</pattern>
                </timestamp>

                <!-- 2) API URL (MDC) -->
                <mdc>
                    <includeMdcKeyName>apiUrl</includeMdcKeyName>
                </mdc>

                <!-- 3) response code (MDC) -->
                <mdc>
                    <includeMdcKeyName>responseCode</includeMdcKeyName>
                </mdc>

                <!-- 4) log level -->
                <logLevel>
                    <fieldName>level</fieldName>
                </logLevel>

                <!-- 5) response time (MDC) -->
                <mdc>
                    <includeMdcKeyName>responseTime</includeMdcKeyName>
                </mdc>

                <!-- 6) message (o‘chirmang!) -->
                <message>
                    <fieldName>message</fieldName>
                </message>

                <!-- 7) logger/thread -->
                <loggerName>
                    <fieldName>logger</fieldName>
                </loggerName>
                <threadName>
                    <fieldName>thread</fieldName>
                </threadName>

                <!-- 8) qolgan MDC'lar (kamroq prioritet) -->
                <mdc>
                    <includeMdcKeyName>logType</includeMdcKeyName>
                    <includeMdcKeyName>clientIp</includeMdcKeyName>
                    <includeMdcKeyName>queryString</includeMdcKeyName>
                    <includeMdcKeyName>userAgent</includeMdcKeyName>
                    <!-- katta bo‘lishi mumkin, ehtiyot bo‘ling -->
                    <includeMdcKeyName>responseBody</includeMdcKeyName>
                </mdc>

                <!-- 9) static field -->
                <globalCustomFields>
                    <customFields>{"application":"${APP_NAME}"}</customFields>
                </globalCustomFields>

                <!-- 10) exception -->
                <stackTrace>
                    <fieldName>exception</fieldName>
                </stackTrace>

            </providers>
        </encoder>
    </appender>

    <!-- ===================== -->
    <!-- Dev Console Appender  -->
    <!-- ===================== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Logger levels -->
    <logger name="uz.javachi.devops_assignment.config.LoggingFilter" level="INFO"/>
    <logger name="uz.javachi.devops_assignment" level="INFO"/>
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>

    <!-- Default: Kubernetes-friendly JSON -->
    <root level="INFO">
        <appender-ref ref="CONSOLE_JSON"/>
    </root>

    <!-- dev/local: human-readable -->
    <springProfile name="dev,local">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- prod: JSON -->
    <springProfile name="prod,production">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
        </root>
    </springProfile>
</configuration>

