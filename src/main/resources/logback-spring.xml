    <!-- Logger for API requests -->
    <logger name="uz.javachi.devops_assignment.config.LoggingFilter" level="INFO"/>

    <!-- Logger for application -->
    <logger name="uz.javachi.devops_assignment" level="INFO"/>

    <!-- Logger for Spring -->
    <logger name="org.springframework" level="WARN"/>

    <!-- Logger for Hibernate -->
    <logger name="org.hibernate" level="WARN"/>

    <!-- Root logger - Default: Console JSON only (Kubernetes-friendly) -->
    <!-- Kubernetes automatically collects stdout/stderr logs, so console logging is sufficient -->
    <root level="INFO">
        <appender-ref ref="CONSOLE_JSON"/>
    </root>

    <!-- Profile-specific configurations -->
    <springProfile name="dev,local">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="prod,production">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
        </root>
    </springProfile>
</configuration>
